    "@astrojs/rss": "^2.4.3",
    "@astrojs/sitemap": "^2.0.1",
    "@types/lodash": "^4.14.195",
    "@types/react": "^18.2.16",
    "@vanilla-extract/css": "^1.12.0",
    "@vanilla-extract/recipes": "^0.5.0",
    "@vanilla-extract/sprinkles": "^1.6.1",
    "@vanilla-extract/vite-plugin": "^3.8.2",
    "astro": "^2.9.2",
    "clsx": "^2.0.0",
    "csstype": "^3.1.2",
    "image-size": "^1.0.2",
    "jimp": "^0.22.8",
    "lodash": "^4.17.21",
    "markdown-it": "^13.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-group": "^3.0.2",
    "richtypo": "^4.1.17",
    "richtypo-rules-en": "^4.0.23",
