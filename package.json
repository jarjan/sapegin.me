  },
  "engines": {
    "node": ">=18"
  },
  "browserslist": [
    ">1%",
    "last 1 version",
    "Firefox ESR",
    "not dead"
  ],
  "dependencies": {
    "@astrojs/react": "^2.2.1",
    "@astrojs/rss": "^2.4.3",
    "@astrojs/sitemap": "^1.3.3",
    "@types/lodash": "^4.14.195",
    "@types/react": "^18.2.14",
    "@vanilla-extract/css": "^1.12.0",
    "@vanilla-extract/recipes": "^0.4.0",
    "@vanilla-extract/sprinkles": "^1.6.1",
    "@vanilla-extract/vite-plugin": "^3.8.2",
    "astro": "^2.8.0",
    "clsx": "^1.2.1",
    "csstype": "^3.1.2",
    "jimp": "^0.22.8",
    "lodash": "^4.17.21",
    "markdown-it": "^13.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-group": "^3.0.2",
    "richtypo": "^4.1.17",
    "richtypo-rules-en": "^4.0.23",
    "romanize": "^1.1.1",
