<!doctype html>
<html lang="<%= @config.language %>">
<head>
	<meta charset="utf-8">
	<title><%- @page_title() %></title>
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<meta name="format-detection" content="telephone=no">
	<meta name="description" content="<%= @config.description %>">
	<meta property="og:type" content="website">
	<meta property="og:title" content="<%- @page.title %>">
	<meta property="og:url" content="<%= @page.url %>">
	<meta property="og:site_name" content="<%= @config.title %>">
	<meta property="og:description" content="<%= @config.description %>">
	<meta name="twitter:card" content="summary">
	<meta name="twitter:title" content="<%- @page.title %>">
	<meta name="twitter:description" content="<%= @config.description %>">
	<meta name="twitter:creator" content="@sapegin">
	<link href="<%- @fingerprint '/build/styles.css' %>" rel="stylesheet">
	<!--
	<script>%- @embed_file 'build/inlines/counters.js' %</script>
	-->
	<script><%- @embed_file 'build/inlines/fontloader.js' %></script>
	<script>loadFont('Roboto','/build/Roboto')</script>
</head>
	<body class="<%= @body_class() %>">
		<% content %>
		<% if @page.jquery: %>
			<script src="http://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>
		<% end %>
		<% if @page.scripts: %>
			<% for script in @page.scripts: %>
				<script src="<%- @fingerprint "/build/#{script}.js" %>"></script>
			<% end %>
		<% end %>
	</body>
</html>
