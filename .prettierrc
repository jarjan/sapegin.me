{
  "singleQuote": true,
  "trailingComma": "es5",
  "useTabs": true,
  "overrides": [
    {
      "files": "*.md",
      "options": {
        "arrowParens": "avoid",
        "printWidth": 70,
        "proseWrap": "never",
        "trailingComma": "none",
        "useTabs": false
      }
    },
    {
      "files": "*.{json,babelrc,eslintrc,remarkrc,prettierrc}",
      "options": {
        "useTabs": false
      }
    }
  ]
}
