.column-list {
	layout-row();
		
	&__item {
		layout-nth(1/2);
		space();
		float:left;
		width:50%;
	}
	
	&__title {
		font-size:big_font;
	}
	&__text {
		font-size:small_font;
	}

	&_primary &__title {
		font-size:big_font*1.25;
	}
	&_primary &__text {
		font-size:big_font;
	}
}
