body {
	background: bg_color;
	color: base_color;
	line-height: 1.5;
	font-size: normal_font;
	if (max_width) {
		max-width: max_width;
		margin-left: auto;
		margin-right: auto;
	}
}


// Fonts

body {
	font-family: Helvetica, sans-serif;
	font-weight: 300;
}


// Headers:  alpha, beta, gamma, delta, epsilon, epsilon

.alpha {
	font-size: 44px;
	margin-bottom: 20px;
	margin-left: -2.2px;
	line-height: 1.2;
	font-weight: inherit;
}

.beta {
	margin-top: 40px;
	margin-bottom: 20px;
	margin-left: -1.7px;
	line-height: 1.2;
	font-size: 34px;
	font-weight: inherit;
}


// Text

.text {
	h2 {
		@extend .beta;
	}

	p,
	ul,
	ol {
		space(2);
	}
}
